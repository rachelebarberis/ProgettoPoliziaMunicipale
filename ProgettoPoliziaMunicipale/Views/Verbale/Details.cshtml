@model ProgettoPoliziaMunicipale.ViewModel.VerbaleViewModel

@{
    ViewData["Title"] = "Dettagli Verbale";
}

<h2 style="text-align: center; color: #34495e; font-family: Arial, sans-serif;">Dettagli Verbale</h2>

<div class="container" style="max-width: 700px; margin: auto; background: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <div class="card-body">
        <h4 class="card-title" style="text-align: center; color: #2c3e50;">Verbale #@Model.IdVerbale</h4>
        <ul class="list-group">
            <li class="list-group-item"><strong>Data Violazione:</strong> @Model.DataViolazione.ToShortDateString()</li>
            <li class="list-group-item"><strong>Indirizzo Violazione:</strong> @Model.IndirizzoViolazione</li>
            <li class="list-group-item"><strong>Nominativo Agente:</strong> @Model.NominativoAgente</li>
            <li class="list-group-item"><strong>Data Trascrizione:</strong> @Model.DataTrascrizioneVerbale.ToShortDateString()</li>
            <li class="list-group-item"><strong>Importo:</strong> @Model.Importo €</li>
            <li class="list-group-item"><strong>Decurtamento Punti:</strong> @Model.DecurtamentoPunti</li>
            <li class="list-group-item"><strong>ID Anagrafica:</strong> @Model.IdAnagrafica</li>
            <li class="list-group-item"><strong>Nome e Cognome:</strong> @Model.NomeCognomeAnagrafica</li>
        </ul>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Edit" asp-route-id="@Model.IdVerbale" class="btn" style="background: #f39c12; color: white; ; border-radius: 5px"> Modifica</a>
		<a asp-action="Index" class="btn btn-secondary" style=" border-radius: 5px;"> Torna alla lista</a> <form asp-action="Delete" asp-route-id="@Model.IdVerbale" method="post" style="display:inline; text-align: center;">
			<button type="submit" class="btn btn-danger" style=" border-radius: 5px;" onclick="return confirm('Sei sicuro di voler eliminare questo verbale?');"> Elimina</button>
		</form>
    </div>

   
</div>