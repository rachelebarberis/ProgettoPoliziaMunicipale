@model ProgettoPoliziaMunicipale.ViewModel.VerbaleViewModel

@{
    ViewData["Title"] = "Dettagli Verbale";
}

<h2>Dettagli Verbale</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Verbale #@Model.IdVerbale</h4>
        <ul class="list-group">
            <li class="list-group-item"><strong>Data Violazione:</strong> @Model.DataViolazione.ToShortDateString()</li>
            <li class="list-group-item"><strong>Indirizzo Violazione:</strong> @Model.IndirizzoViolazione</li>
            <li class="list-group-item"><strong>Nominativo Agente:</strong> @Model.NominativoAgente</li>
            <li class="list-group-item"><strong>Data Trascrizione:</strong> @Model.DataTrascrizioneVerbale.ToShortDateString()</li>
            <li class="list-group-item"><strong>Importo:</strong> @Model.Importo €</li>
            <li class="list-group-item"><strong>Decurtamento Punti:</strong> @Model.DecurtamentoPunti</li>
            <li class="list-group-item"><strong>ID Anagrafica:</strong> @Model.IdAnagrafica</li>
            <li class="list-group-item"><strong>Nome e Cognome:</strong> @Model.NomeCognomeAnagrafica</li>
        </ul>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.IdVerbale" class="btn btn-warning mt-3">Modifica</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Torna alla lista</a>

<form asp-action="Delete" asp-route-id="@Model.IdVerbale" method="post" class="mt-3" style="display:inline;">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Sei sicuro di voler eliminare questo verbale?');">Elimina</button>
</form>

