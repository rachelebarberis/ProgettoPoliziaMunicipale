@model List<VerbaleViewModel>

@{
    ViewData["Title"] = "Lista Verbali";
}

<h2 style="text-align: center; color: #34495e; font-family: Arial, sans-serif;">Lista Verbali</h2>

<div class="container" style="max-width: 900px; margin: auto; background: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <a asp-action="Add" class="btn" style="background: #5dade2; color: white; padding: 10px 15px; border-radius: 5px; font-weight: bold;"> Aggiungi Nuovo Verbale</a>
    <table class="table table-striped table-bordered" style="margin-top: 20px;">
        <thead style="background: #5dade2; color: white;">
            <tr>
                <th>Data Violazione</th>
                <th>Indirizzo</th>
                <th>Agente</th>
                <th>Importo</th>
                <th>Decurtamento Punti</th>
                <th>Nome e Cognome</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var verbale in Model)
            {
                <tr>
                    <td>@verbale.DataViolazione.ToShortDateString()</td>
                    <td>@verbale.IndirizzoViolazione</td>
                    <td>@verbale.NominativoAgente</td>
                    <td>@verbale.Importo €</td>
                    <td>@verbale.DecurtamentoPunti</td>
                    <td>@verbale.NomeCognomeAnagrafica</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@verbale.IdVerbale" class="btn btn-info btn-sm m-2"> Dettagli</a>
                        <a asp-action="Edit" asp-route-id="@verbale.IdVerbale" class="btn btn-warning btn-sm m-2"> Modifica</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
