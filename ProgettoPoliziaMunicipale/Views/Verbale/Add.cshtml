@model ProgettoPoliziaMunicipale.ViewModel.VerbaleViewModel

@{
    ViewData["Title"] = "Aggiungi Verbale";
}

<h2 style="text-align: center; color: #34495e; font-family: Arial, sans-serif;">Nuovo Verbale</h2>

<div class="container" style="max-width: 700px; margin: auto; background: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <form asp-action="Add" method="post">
        <div class="mb-3">
            <label class="form-label">Data Violazione</label>
            <input asp-for="DataViolazione" type="date" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Indirizzo Violazione</label>
            <input asp-for="IndirizzoViolazione" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Nominativo Agente</label>
            <input asp-for="NominativoAgente" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Data Trascrizione Verbale</label>
            <input asp-for="DataTrascrizioneVerbale" type="date" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Importo</label>
            <input asp-for="Importo" type="number" step="0.01" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Decurtamento Punti</label>
            <input asp-for="DecurtamentoPunti" type="number" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Persona (Anagrafica)</label>
            <select asp-for="IdAnagrafica" class="form-select" asp-items="@(new SelectList(ViewBag.Anagrafiche, "IdAnagrafica", "NomeCompleto"))">
                <option value="">-- Seleziona una persona --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Violazione</label>
            <select asp-for="IdViolazione" class="form-select" asp-items="@(new SelectList(ViewBag.Violazioni, "IdViolazione", "Descrizione"))">
                <option value="">-- Seleziona una violazione --</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn" style="background: #5dade2; color: white; padding: 10px 15px; border-radius: 5px; font-weight: bold;"> Salva</button>
            <a asp-action="Index" class="btn btn-secondary" style="padding: 10px 15px; border-radius: 5px;"> Annulla</a>
        </div>
    </form>
</div>