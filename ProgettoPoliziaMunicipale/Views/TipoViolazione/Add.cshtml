@model TipoViolazione

@{
    ViewData["Title"] = "Inserisci Tipo Violazione";
}

<h2>Inserisci Nuovo Tipo di Violazione</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Descrizione" class="control-label">Descrizione</label>
        <textarea asp-for="Descrizione" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Salva</button>
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </div>
</form>

