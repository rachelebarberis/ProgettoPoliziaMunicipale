@model List<TipoViolazione>

@{
    ViewData["Title"] = "Elenco Tipi Violazione";
}

<h2 style="text-align: center; color: #34495e; font-family: Arial, sans-serif;">Elenco Violazione</h2>

<div class="container" style="max-width: 800px; margin: auto; background: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <p style="text-align: center;">
        <a asp-action="Add" class="btn" style="background: #5dade2; color: white; padding: 10px 20px; border-radius: 5px; font-weight: bold;"> Inserisci Nuovo Tipo di Violazione</a>
    </p>

    <table class="table" style="width: 100%; border-collapse: collapse; background: white; border-radius: 10px; overflow: hidden;">
        <thead style="background: #5dade2; color: white; text-align: left;">
            <tr>
                <th style="padding: 10px;">Descrizione</th>
                <th style="padding: 10px;">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violazione in Model)
            {
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px;">@violazione.Descrizione</td>
                    <td style="padding: 10px;">
                        <a asp-action="Edit" asp-route-id="@violazione.IdViolazione" class="btn" style="background: #f4d03f; color: white; padding: 5px 10px; border-radius: 5px; font-weight: bold;">Modifica</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
