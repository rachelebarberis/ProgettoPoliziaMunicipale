@model Anagrafica
@{
    ViewData["Title"] = "Modifica Anagrafica";
}

<h2 style="text-align: center; color: #34495e; font-family: Arial, sans-serif;">Modifica Anagrafica</h2>

<div class="container" style="max-width: 600px; margin: auto; background: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
    <form asp-action="Edit" method="post" style="padding: 15px;">
        <input type="hidden" asp-for="IdAnagrafica" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cognome" class="control-label" style="font-weight: bold;">Cognome</label>
                    <input asp-for="Cognome" class="form-control" style="border-radius: 5px;" />
                    <span asp-validation-for="Cognome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label" style="font-weight: bold;">Nome</label>
                    <input asp-for="Nome" class="form-control" style="border-radius: 5px;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Indirizzo" class="control-label" style="font-weight: bold;">Indirizzo</label>
            <input asp-for="Indirizzo" class="form-control" style="border-radius: 5px;" />
            <span asp-validation-for="Indirizzo" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Citta" class="control-label" style="font-weight: bold;">Città</label>
                    <input asp-for="Citta" class="form-control" style="border-radius: 5px;" />
                    <span asp-validation-for="Citta" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cap" class="control-label" style="font-weight: bold;">CAP</label>
                    <input asp-for="Cap" class="form-control" style="border-radius: 5px;" />
                    <span asp-validation-for="Cap" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CodiceFiscale" class="control-label" style="font-weight: bold;">Codice Fiscale</label>
            <input asp-for="CodiceFiscale" class="form-control" style="border-radius: 5px;" />
            <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
        </div>
        <div class="form-group mt-3" style="text-align: center;">
            <button type="submit" class="btn" style="background: #5dade2; color: white; padding: 10px 20px; border-radius: 5px; font-weight: bold;">💾 Salva</button>
            <a asp-action="Index" class="btn" style="background: #95a5a6; color: white; padding: 10px 20px; border-radius: 5px; font-weight: bold;">❌ Annulla</a>
        </div>
    </form>
</div>