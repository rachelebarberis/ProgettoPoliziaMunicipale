@model List<VerbaleViewModel>

@{
    ViewBag.Title = "Violazioni Oltre 400 Euro";
}

<h2>Elenco Verbali con più di 400 euro</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Verbale N°</th>
            <th>Data Violaz.</th>
            <th>Trasgressore</th>
            <th>Importo</th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdVerbale</td>
                <td>@item.DataViolazione.ToString("dd/MM/yyyy")</td>
                <td>@item.NomeCognomeAnagrafica</td>
                <td>@item.Importo</td>
              
            </tr>
        }
    </tbody>
</table>