@model List<VerbaliTrasgressoreViewModel>
@{
    ViewData["Title"] = "Verbali per Trasgressore";
}

<h2 class="text-center text-success fw-bold">Verbali per Trasgressore</h2>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="bg-success text-white">
                <tr>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Codice Fiscale</th>
                    <th>Numero Verbali</th>
                    <th>Importo Totale (€)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var punti in Model)
                {
                    <tr>
                        <td>@punti.Cognome</td>
                        <td>@punti.Nome</td>
                        <td>@punti.CodiceFiscale</td>
                        <td class="fw-bold">@punti.NumeroVerbali</td>
                        <td class="fw-bold text-danger">@punti.ImportoTotale.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
