@model List<VerbaliTrasgressoreViewModel>
@{
    ViewData["Title"] = "Verbali per Trasgressore";
}

<h2>Verbali per Trasgressore</h2>



<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Codice Fiscale</th>
            <th>Numero Verbali</th>
            <th>Importo Totale (€)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.CodiceFiscale</td>
                <td>@item.NumeroVerbali</td>
                <td>@item.ImportoTotale.ToString("N2")</td>
            </tr>
        }
    </tbody>
</table>

