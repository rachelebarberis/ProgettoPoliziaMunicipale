@model List<ViolGraviViewModel>
@{
    ViewData["Title"] = "Violazioni superiori a 10 punti";
}

<h2 class="text-center text-danger fw-bold">Violazioni oltre 10 punti</h2>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="bg-danger text-white">
                <tr>
                    <th>Cognome</th>
                    <th>Nome</th>
                    <th>Data Violazione</th>
                    <th>Punti Totali Decurtati</th>
                    <th>Importo Sanzione (€)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var viol in Model)
                {
                    <tr>
                        <td>@viol.Cognome</td>
                        <td>@viol.Nome</td>
                        <td>@viol.DataViolazione.ToShortDateString()</td>
                        <td class="fw-bold text-warning">@viol.DecurtamentoPunti</td>
                        <td class="fw-bold text-danger">@viol.Importo.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
